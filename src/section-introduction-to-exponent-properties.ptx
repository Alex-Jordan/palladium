        </exercise>
        <exercise label="exponent-variable-power-times-power">
          <webwork xml:id="webwork-exponent-variable-power-times-power">
            <pg-code>
              $x = list_random('a' .. 'k', 'm', 'n', 'p' .. 'r', 't' .. 'z');
              Context("Form")->variables->are($x => 'Real');
              ($m, $n) = random_subset(2, 2..10);
              $total = $m+$n;
              $given = Formula("$x^($m) * $x^($n)");
              $ans = Formula("$x^($total)");
            </pg-code>
            <statement>
              <p>
                <m><var name="$given"/></m>
              </p>
              <p>
                <var name="$ans" width="6"/>
              </p>
            </statement>
            <solution>
              <p>
                We have two powers with the same base. So we can keep that base, and add the
                exponents: <m><var name="$ans"/></m>.
              </p>
            </solution>
          </webwork>
        </exercise>
        <exercise label="exponent-variable-power-times-power-copy">
          <webwork copy="webwork-exponent-variable-power-times-power"/>
        </exercise>
