    <subexercises>
      <title>Skills Practice</title>
      <exercisegroup cols="4">
        <introduction>
          <p>
            Use the properties of exponents to simplify the expression.
          </p>
        </introduction>
        <exercise label="exponent-number-times-power">
          <webwork xml:id="webwork-exponent-number-times-power">
            <pg-code>
              Context("Form");
              $b=random(2,9,1);
              $m=1;
              $n=random(2,10,1);
              $total = $m+$n;
              $given = Formula("$b * $b^($n)");
              $ans = Formula("$b^($total)");
            </pg-code>
            <statement>
              <p>
                <m><var name="$given"/></m>
              </p>
              <p>
                <var name="$ans" width="6"/>
              </p>
            </statement>
          </webwork>
        </exercise>
        <exercise label="exponent-number-times-power-copy">
          <webwork copy="webwork-exponent-number-times-power"/>
        </exercise>
        <exercise label="exponent-number-power-times-power">
          <webwork xml:id="webwork-exponent-number-power-times-power">
            <pg-code>
              Context("Form");
              $b=random(2,9,1);
              ($m, $n) = random_subset(2, 2..10);
              $total = $m+$n;
              $given = Formula("$b^($m) * $b^($n)");
              $ans = Formula("$b^($total)");
            </pg-code>
            <statement>
              <p>
                <m><var name="$given"/></m>
              </p>
              <p>
                <var name="$ans" width="6"/>
              </p>
            </statement>
          </webwork>
        </exercise>
        <exercise label="exponent-number-power-times-power-copy">
