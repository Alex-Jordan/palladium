      <exercise label="which-quadrant">
        <webwork xml:id="webwork-which-quadrant">
          <pg-macros>
            <macro-file>parserPopUp.pl</macro-file>
          </pg-macros>
          <pg-code>
            @x = random_subset(2,1..9);
            @p = (Point(@x), -Point(@x), Point($x[0], -$x[1]), Point($x[1], -$x[0]));
            @p = random_subset(4, @p);
            for (0..3) {
              $ans[$_] = 'I'   if (($p[$_]->value)[0] &gt; 0 &amp;&amp; ($p[$_]->value)[1] &gt; 0);
              $ans[$_] = 'II'  if (($p[$_]->value)[0] &lt; 0 &amp;&amp; ($p[$_]->value)[1] &gt; 0);
              $ans[$_] = 'III' if (($p[$_]->value)[0] &lt; 0 &amp;&amp; ($p[$_]->value)[1] &lt; 0);
              $ans[$_] = 'IV'  if (($p[$_]->value)[0] &gt; 0 &amp;&amp; ($p[$_]->value)[1] &lt; 0);
              $d[$_] = DropDown(['I','II','III','IV'], $ans[$_], showInStatic => 0);
              $xposneg[$_] = (($p[$_]->value)[0] > 0) ? 'positive' : 'negative';
              $yposneg[$_] = (($p[$_]->value)[1] > 0) ? 'positive' : 'negative';
            }
            %qwords = (
              I => 'upper right',
              II => 'upper left',
              III => 'lower left',
              IV => 'lower right',
            );
            @ul = map {$qwords{$_}} @ans;
          </pg-code>
          <task>
            <statement>
