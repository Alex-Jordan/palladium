              ticksDistanceX => 50,
              ticksDistanceY => 50,
              snapSizeX => 5,
              snapSizeY => 5,
              showInStatic => 0,
              showCoordinateHints => 0,
              cmpOptions => {
                list_checker => sub {
                  my ($c, $s, $ans, $value) = @_;
                  return 0 if $ans->{isPreview};
                  my $score = 0;
                  my @errors;
                  my ($p, $q) = (0, 0);
                  for (0 .. $#$s) {
                    if (!$p &amp;&amp; (abs(($s->[$_]->extract(2)->value)[0] - $x[0]) &lt; 5 &amp;&amp; abs(($s->[$_]->extract(2)->value)[1] - $y[0]) &lt; 5)) { $p = 1; ++$score; next; }
