  <exercises>
    <exercisegroup cols="3">
      <title>Identifying Coordinates</title>
      <introduction>
        <p>
          Identify the coordinates of each point in the graph.
        </p>
      </introduction>
      <exercise label="identify-cartesian-coordinates">
        <webwork xml:id="webwork-identify-cartesian-coordinates">
          <pg-code>
            @xy = random_subset(8, -4..-1, 1..4);
            @x = (@xy)[0..3];
            @y = (@xy)[4..7];
            @z = random_subset(2,0..3);
            $x[$z[0]] = 0;
            $y[$z[1]] = 0;
            Context("Point");
            @p = map {Point($x[$_], $y[$_])} (0..3);
          </pg-code>
          <statement>
            <image>
              <latex-image>
                \begin{tikzpicture}
                  \begin{axis}[
                      width=0.33\orccaprintwidth,
