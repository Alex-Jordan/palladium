  $a = $d*random(2,10,1);
  $b = $d*random(2,10,1)*random(-1,1,2);
  $c = $d*random(2,10,1)*random(-1,1,2);
} until ( ($a!=$b) && ($a!=$c) && ($b!=$c) );
$exp3 = random(1,2,1);
