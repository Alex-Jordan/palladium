$b = non_zero_random(-9,9);
Context("Fraction");
$m = Fraction(random_coprime([1..9],[2..5]));
$f = Formula("$m x + $b")->reduce;
@x = random_subset(4,-4..4);
@x = map {$_ * ($m->value)[1]} (@x);
@y = map {$f->eval(x => $_)} (@x);
$y[2] += non_zero_random(-5,5);
($x[3],$y[3]) = ($y[3],$x[3]);
Context("Point");
@p = map {Point($x[$_],$y[$_])} (random_subset(4,0..3));
@ans;
for (0..3) {
  push(@ans, $_) if ($f->eval(x => ($p[$_]->value)[0]) == ($p[$_]->value)[1]);
}
$checks = CheckboxList([map {'\(' . $_->TeX . '\)'} (@p)], [@ans], options);

############################################################
# Body
############################################################

BEGIN_PGML
Which of the ordered pairs are solutions to the given equation? There may be more than one correct answer.

[`y=[$f]`]

[_]{$checks}{5}

END_PGML

