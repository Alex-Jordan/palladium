@x = (-2..2);
$m = random(2, 6);
$f = Formula("$m x");
@y = map{$f->eval(x => $_)} (@x);
Context("Numeric")->variables->add(y => 'Real');
parser::Assignment->Allow;
$eq = Formula("y = $f");

