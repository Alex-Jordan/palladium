@x = random_subset(2, -9..9);
@y = random_subset(2, -9..9);
Context("Fraction");
$m[0] = Fraction(($y[1] - $y[0]) / ($x[1] - $x[0]));
# construct lines neither perpendicular nor parallel
do {
  ($x[2],$x[3]) = random_subset(2, -9..9);
  ($y[2],$y[3]) = random_subset(2, -9..9);
} until ($x[2] != $x[0] && ($y[2] - $y[0]) / ($x[2] - $x[0]) != $m[0] && ($y[2] - $y[3]) / ($x[2] - $x[3]) != $m[0]);
@p = map {Point($x[$_],$y[$_])} (0..3);
$choices = DropDown(
  ['same line', 'distinct and parallel', 'perpendicular', 'none of the above'], 3,
  showInStatic => 0
);

