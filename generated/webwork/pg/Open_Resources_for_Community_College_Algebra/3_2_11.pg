    ],
    [[PGML('[`[$x[0]]`]'),
      rowbottom => '1',
      midrule => '1',],
     PGML('[_]{$mp}{5}'),
     PGML('[_]{$mp}{5}'),
    ],
    [[PGML('[`[$x[1]]`]'),
      rowbottom => '1',
