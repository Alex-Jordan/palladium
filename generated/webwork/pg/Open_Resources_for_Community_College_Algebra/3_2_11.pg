    ],
    [PGML('[`[$x[4]]`]'),
     PGML('[_]{$mp}{5}'),
     PGML('[_]{$mp}{5}'),
    ],
  ],
      align => 'r|r|c',);@]* <<

[_]{$gt}{1}

