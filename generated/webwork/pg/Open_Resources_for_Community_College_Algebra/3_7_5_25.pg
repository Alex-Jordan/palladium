($x, $y) = random_subset(2, 2..9);
$C = lcm($x,$y);
$A = $C/$x;
$B = $C/$y;
($A, $B) = (random(0,1))
  ? (-$A, $B)
  : ($A, -$B);
$x = $C/$A;
$y = $C/$B;
$m = -$A/$B;
$b = $C/$B;
Context()->variables->add(y => 'Real');
Context()->noreduce('(-x)-y', '(-x)+y');
$left = Formula("$A x + $B y")->reduce;
$right = Formula("$C");
$xi = Point($x,0);
$yi = Point(0,$y);
Context("Point");
Context()->flags->set(reduceConstants=>0);
$xi=Compute("($x,0)");
$yi=Compute("(0,$y)");
$gt = GraphTool("{line, solid, $xi, $yi}, {point, $xi}, {point, $yi}")->with(
  bBox => [-11, 11, 11, -11],
  availableTools => [ "PointTool", "LineTool" ],
  showInStatic => 0,
);
@domain = num_sort(-10,10,(10 - $b)/$m,(-10 - $b)/$m);
($l,$r) = (@domain)[1,2];
$f = Formula("$m x + $b");

$image_1 = createLaTeXImage();
$image_1->addToPreamble(latexImagePreamble());
$image_1->BEGIN_LATEX_IMAGE
\begin{tikzpicture}
  \begin{axis}[
      xmin=-10,
      xmax=10,
      ymin=-10,
      ymax=10,
      xtick={-10,-5,5,10},
      ytick={-10,-5,5,10},
      minor xtick={-10,...,10},
      minor ytick={-10,...,10},
      width=0.47\orccaprintwidth,
    ]
    \addplot+[domain=$l:$r] {$f};
    \addplot[soliddot] coordinates {$xi $yi};
  \end{axis}
\end{tikzpicture}

END_LATEX_IMAGE

