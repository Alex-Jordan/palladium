@xy = random_subset(4, -5..-1,1..5);
@x = (@xy)[0,1];
@y = (@xy)[2,3];
@z = random_subset(2,0,1);
Context("Fraction");
$x[$z[0]] += Fraction(list_random(-2,-1,1,2),3);
$y[$z[1]] += Fraction(list_random(-2,-1,1,2),3);
@p = map {Point($x[$_], $y[$_])} (0,1);
$gt = GraphTool("{point,$p[0]}", "{point,$p[1]}")->with(
  availableTools => ['PointTool'],
  bBox => [-6,6,6,-6],
  snapSizeX => 1/3,
  snapSizeY => 1/3,
  showInStatic => 0,
  showCoordinateHints => 0,
);
@absx = map {abs($_)} @x;
@absy = map {abs($_)} @y;
@dirx = map {($_ >= 0) ? 'to the right' : 'to the left'} @x;
@diry = map {($_ >= 0) ? 'up' : 'down'} @y;

$image_1 = createLaTeXImage();
$image_1->addToPreamble(latexImagePreamble());
$image_1->BEGIN_LATEX_IMAGE
\begin{tikzpicture}
  \begin{axis}[
      width=0.47\orccaprintwidth,
    ]
    \addplot[soliddot] coordinates {$p[0] $p[1]};
  \end{axis}
\end{tikzpicture}

END_LATEX_IMAGE

