($x, $y) = random_subset(2, 'x','y','z','r','t');
Context("Fraction");
Context()->variables->are($x => 'Real', $y => 'Real');
Context()->noreduce('(-x)+y', '(-x)-y');
for my $i (0..3) {
  $c[$i] = Fraction(non_zero_random(-9,9,1),non_zero_random(-9,9,1));
}
$poly1 = Formula("$c[0] $x + $c[1]$y")->reduce;
$poly2 = Formula("$c[2] $y + $c[3]$x")->reduce;
$m[0] = $c[0] - $c[3];
$m[1] = $c[1] - $c[2];
Context("LimitedPolynomial-Strict");
Context()->variables->are($x => 'Real', $y => 'Real');
$answer = Formula("$m[0] $x + $m[1]$y")->reduce;

############################################################
# Body
############################################################

BEGIN_PGML
Add or subtract the multivariable polynomials as indicated.

[`\left([$poly1]\right)-\left([$poly2]\right)`]

[_]{$answer}{20}

END_PGML

