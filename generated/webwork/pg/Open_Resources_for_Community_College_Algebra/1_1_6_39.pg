$sol[4] = $a*$sol[1];
$sol[5] = $b*$x;
$sol[6] = Formula("solvar + $var + $c")->reduce;
$sol[7] = $sol[6]->substitute($var => Formula("$sol[5]"), solvar => Formula("$sol[4]"));
