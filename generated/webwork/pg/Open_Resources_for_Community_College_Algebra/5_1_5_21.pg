############################################################
# PG Setup Code
############################################################
$x = list_random('x','y','r','t');
Context()->variables->are($x => 'Real');
Context()->noreduce('(-x)+y', '(-x)-y');
@n = random_subset(2, 1..9);
@c = random_subset(4, -9..-1, 1..9);
$poly1 = Formula("$c[0] $x^$n[0] + $c[1] $x^$n[1]")->reduce;
$poly2 = Formula("$c[2] $x^$n[0] + $c[3] $x^$n[1]")->reduce;
$m[0] = $c[0] + $c[2];
$m[1] = $c[1] + $c[3];
Context("LimitedPolynomial-Strict");
Context()->variables->are($x => 'Real');
$answer = Formula("$m[0] $x^$n[0] + $m[1] $x^$n[1]")->reduce;
@terms1 = (Formula("$c[0] $x^$n[0]")->reduce, Formula("$c[1] $x^$n[1]")->reduce);
@terms2 = (Formula("$c[2] $x^$n[0]")->reduce, Formula("$c[3] $x^$n[1]")->reduce);
Context("Numeric")->variables->are($x => 'Real');
Context()->noreduce('(-x)+y', '(-x)-y');
@terms1 = (Formula("$c[0] $x^$n[0]")->reduce, Formula("$c[1] $x^$n[1]")->reduce);
@terms2 = (Formula("$c[2] $x^$n[0]")->reduce, Formula("$c[3] $x^$n[1]")->reduce);
@chunks = ($terms1[0] + $terms2[0], $terms1[1] + $terms2[1]);
@chunks = map {$_->reduce} @chunks;

############################################################
# Body
############################################################

BEGIN_PGML
Add the polynomials.

[`\left([$poly1]\right)+\left([$poly2]\right)`]

[_]{$answer}{20}

END_PGML

