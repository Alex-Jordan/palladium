Context('Numeric');
$a = random(2,5,1);
$b = random(1,20,1);
$f = Formula("x^$a + $b");
$start = random(0,2,1);
@x = map{$_+$start}(0..5);
@y = map{$f->eval(x=>$_)}(@x);
for my $i (0..4) {
    $diff[$i] = $y[$i+1]-$y[$i];
};
$yes = DropDown(['yes','no'], 0, showInStatic => 0);
$no = DropDown(['yes','no'], 1, showInStatic => 0);

