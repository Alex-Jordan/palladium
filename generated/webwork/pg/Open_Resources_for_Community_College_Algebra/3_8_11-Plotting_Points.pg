Context('Numeric');
@x=(-2..2);
@y=(-4.25)x5;
$pts=MultiAnswer(map{($_%2==0)?$x[$_/2]:$y[($_-1)/2]}(0..9))->with(
  singleResult => 1,
  allowBlankAnswers => 1,
  checker => sub {
    my ($correct,$student,$self) = @_;
    my @sx = @{$student}[0,2,4,6,8];
    my @sy = @{$student}[1,3,5,7,9];
    my $OK=1;
    if ($sy[0]!=-4.25) {
        $self->setMessage(1,"This point is not on the line.");
        $self->setMessage(2,"This point is not on the line.");
        $OK=0;
      }
    for my $i(1..4){
      if ($sy[$i]!=-4.25) {
        $self->setMessage(2*$i+1,"This point is not on the line.");
        $self->setMessage(2*$i+2,"This point is not on the line.");
        $OK=0;
      }
      for my $j(0..$i-1){
        if ($sy[$i]==-4.25 and $sx[$i]==$sx[$j]) {
          $self->setMessage(2*$i+1,"This point was already used.");
          $self->setMessage(2*$i+2,"This point was already used.");
          $OK=0;
        }
      }
    }
    return $OK;
  }
);

