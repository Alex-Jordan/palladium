@x = random_subset(2, -9..9);
@y = random_subset(2, -9..9);
Context("Fraction");
$m[0] = Fraction(($y[1] - $y[0]) / ($x[1] - $x[0]));
# construct perpendicular line points
do {
  $x[2] = random(-9,9);
  $y[2] = random(-9,9);
} until ($x[2] != $x[0] && ($y[2] - $y[0]) / ($x[2] - $x[0]) != $m[0]);
$m[1] = -1/$m[0];
$d = ($m[1]->value)[1];
$x[3] = $x[2] + non_zero_random(-3,3)*$d;
$y[3] = $y[2] + ($x[3] - $x[2])*$m[1];
@p = map {Point($x[$_],$y[$_])} (0..3);
$choices = DropDown(
  ['same line', 'distinct and parallel', 'perpendicular', 'none of the above'], 2,
  showInStatic => 0
);

