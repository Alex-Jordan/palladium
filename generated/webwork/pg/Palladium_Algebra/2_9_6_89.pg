Context("Point");
Context()->flags->set(reduceConstants=>0);
$a = non_zero_random(-9,9,1);
do {
  do {
    $p = random(2,9,1);
    $q = non_zero_random(-9,9,1);
  } until (gcd($p,$q) == 1);
  do {
    $r = random(2,9,1);
    $s = non_zero_random(-9,9,1);
  } until (gcd($r,$s) == 1);
} until ($p != $r);
$f = RandomVariableName(type=>"function");
$left = Formula("$p x - $q")->reduce;
$right = Formula("$r x - $s")->reduce;
$formula = Formula("$a($left)($right)")->reduce;
$c = $a*$q*$s;
$yint = Point(0,$c);
$xint = Compute("($q/$p,0),($s/$r,0)");
$fof0 = $formula->substitute(x=>Formula("0"));
Context("Fraction");
$r1 = Fraction($q,$p);
$r2 = Fraction($s,$r);

