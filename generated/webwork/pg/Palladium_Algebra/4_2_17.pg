[```\newcommand{\amp}{&}
\begin{aligned}
\left( 7^{4} x^{-6} t^{2} \right)^{-5} \left( 7 x^{-2} t^{-7} \right)^{4}
                \amp=  \left( 7^{4} \right)^{-5} \left( x^{-6} \right)^{-5} \left( t^{2} \right)^{-5} \cdot \left( 7 \right)^{4} \left(x^{-2}\right)^{4}  \left(t^{-7} \right)^{4}\\
\amp=   7^{-20} x^{30} t^{-10} \cdot 7^{4} x^{-8} t^{-28}\\
\amp= 7^{-20+4} x^{30-8} t^{-10-28}\\
\amp= 7^{-16} x^{22} t^{-38}\\
\amp= \frac{x^{22}}{7^{16}t^{38}}
\end{aligned}
```]

