$b = random(42000,60000,6000);
$r = $b/60;
$f = Formula("$b - $r x");
Context("Currency")->flags->set(trimTrailingZeros=>1);
$bc = Currency($b);
$rc = Currency($r);
$gt = GraphTool("{line,solid,(0,$b),(60,0)}")->with(
  bBox => [-10,75000,72,-8000],
  availableTools => [ "LineTool" ],
  gridX => 12,
  gridY => 2000,
  ticksDistanceX => 6,
  ticksDistanceY => 8000,
  minorTicksX => 5,
  snapSizeY => 2000,
  showInStatic => 0,
  xAxisLabel => 'x\\text{ (months)}',
  yAxisLabel => 'y\\text{ (dollars)}',
);
@x = (0,15,30,45,60);
@y = map {$f->eval(x => $_)} @x;

$image_1 = createLaTeXImage();
$image_1->addToPreamble(latexImagePreamble());
