Context("Fraction");
Context()->noreduce('(-x)-y', '(-x)+y');
$actual_solution = Fraction(random_coprime([1..9],[2..9]));
($m, $n) = (2..9)[NchooseK(8,2)];
$b = Fraction(random_coprime([-9..-1,1..9],[2..9]));
$left = Formula("abs($m x + $b)")->reduce;
$right = Formula("$n x");
$right += $left->eval(x => $actual_solution) - $right->eval(x => $actual_solution);
if (random(0,1)) {
  $right = Formula("-$n x") - $right->eval(x => 0);
}
$right = $right->reduce;
$right = Formula("abs($right)");
$proposed_solution = random(0,2) ? $actual_solution : $actual_solution + non_zero_random(-3,3)/($actual_solution->value)[1];
Context("LimitedFraction")->flags->set(allowMixedNumbers => 0, showMixedNumbers => 0);
$lefteval = Fraction($left->eval(x => $proposed_solution));
$righteval = Fraction($right->eval(x => $proposed_solution));
$inequality = list_random('\lt', '\gt', '\leq', '\geq', '\neq');
$truefalse = (
  ($inequality eq '\lt') ?
  ($lefteval < $righteval) :
  (
    ($inequality eq '\gt') ?
    ($lefteval > $righteval) :
    (
      ($inequality eq '\leq') ?
      ($lefteval <= $righteval) :
      (
        ($inequality eq '\geq') ?
        ($lefteval >= $righteval) :
        ($lefteval != $righteval)
      )
    )
  )
);
$dropdown = DropDown(["Yes, it is a solution.", "No, it is not a solution."], $truefalse ? 0 : 1, showInStatic => 0);

############################################################
# Body
############################################################

BEGIN_PGML
Check if the given number is a solution to the given inequality.

Is [`[$proposed_solution]`] a solution to [`[$left][$inequality][$right]\text{?}`]

>> [@DataTable(
  [
    [PGML('[`[$left->TeX]`]'),
     PGML('[`[$inequality]`]'),
     PGML('[`[$right->TeX]`]'),
    ],
    [PGML('[_]{$lefteval}{3}'),
     PGML('[`\wonder{[$inequality]}`]'),
     PGML('[_]{$righteval}{3}'),
    ],
  ],
      align => 'rcl',
      valign => 'middle',);@]* <<

[_]{$dropdown}{5}

END_PGML

