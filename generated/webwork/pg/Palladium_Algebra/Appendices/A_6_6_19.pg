$actual_solution = Real(random(-6,-1));
($a, $b) = (2..9)[NchooseK(8,2)];
$b = list_random($b, -$b);
$left = Formula("$a x^2 + $b x")->reduce;
$right = $left->eval(x => $actual_solution);
$proposed_solution = random(0,1) ? $actual_solution : $actual_solution + non_zero_random(-3,3);
Context("LimitedNumeric");
$lefteval = Real($left->eval(x => $proposed_solution));
$righteval = Real($right->eval(x => $proposed_solution));
$dropdown = DropDown(["Yes, it is a solution.", "No, it is not a solution."], ($lefteval == $righteval) ? 0 : 1, showInStatic => 0);

############################################################
# Body
############################################################

BEGIN_PGML
Check if the given number is a solution to the given equation.

Is [`[$proposed_solution]`] a solution to [`[$left]=[$right]\text{?}`]

>> [@DataTable(
  [
    [PGML('[`[$left->TeX]`]'),
     PGML('[`=`]'),
     PGML('[`[$right->TeX]`]'),
    ],
    [PGML('[_]{$lefteval}{3}'),
     PGML('[`\wonder{=}`]'),
     PGML('[`[$righteval->TeX]`]'),
    ],
  ],
      align => 'rcl',
      valign => 'middle',);@]* <<

[_]{$dropdown}{5}

END_PGML

