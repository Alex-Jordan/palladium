Context("Fraction-NoDecimals");
@den = random_pairwise_coprime([2..7],[2..7],[2..7]);
$lcd = Real(lcm(@den));
@den = map {$lcd/$_} (@den);
@num = (
  (random_coprime([1..8],[$den[0]]))[0],
  (random_coprime([1..8],[$den[1]]))[0],
  (random_coprime([1..8],[$den[2]]))[0]
);
$m = Fraction($num[0]/$den[0]);
$b = list_random(-1,1)*Fraction($num[1]/$den[1]);
$c = Fraction($num[2]/$den[2]);
$left = Formula("$m x + $b")->reduce;
$right = Formula("$c");
$sol = ($c - $b)/$m;
%cmp = (
  '\gt'  => {interval => ($m > 0) ? "($sol,inf)"  : "(-inf,$sol)", sign => ($m > 0) ? '>'     : '<' },
  '\lt'  => {interval => ($m > 0) ? "(-inf,$sol)" : "($sol,inf)",  sign => ($m > 0) ? '<'  : '>'    },
  '\geq' => {interval => ($m > 0) ? "[$sol,inf)"  : "(-inf,$sol]", sign => ($m > 0) ? '>='    : '<='},
  '\leq' => {interval => ($m > 0) ? "(-inf,$sol]" : "[$sol,inf)",  sign => ($m > 0) ? '<=' : '>='   },
);
$texcmp = list_random(lex_sort(keys %cmp));
$in = Interval($cmp{$texcmp}{interval});
InequalitySetBuilder::UseVerticalSuchThat();
Context("InequalitySetBuilder-Only");
Context()->flags->set(reduceConstants=>0);
$sb = Compute("{ x | x $cmp{$texcmp}{sign} $sol}");
Context("Fraction");
$leftsol[0] = Formula("$lcd*$m x + $lcd*$b")->reduce;
$rightsol[0] = Formula("$lcd*$c")->reduce;
$leftsol[1] = Formula("$lcd*$m x + $lcd*$b - $lcd*$b")->reduce;
$rightsol[1] = Formula("x - $lcd*$b")->reduce;
$rightsol[1] = $rightsol[1]->substitute(x => Formula($lcd*$c));
$leftsol[2] = Formula("$lcd*$m x")->reduce;
$rightsol[2] = Formula("$lcd*$c - $lcd*$b")->reduce;
$leftsol[3] = Formula("x")->reduce;
$rightsol[3] = Formula("($lcd*$c - $lcd*$b) / ($lcd*$m)")->reduce;

