@x = random_subset(2, -5..5);
@y = random_subset(2, -5..5);
Context("Fraction");
$m[0] = Fraction(($y[1] - $y[0]) / ($x[1] - $x[0]));
do {
  do {
    $x[2] = random(-9,9);
    $y[2] = random(-9,9);
  } until ($x[2] != $x[0] && ($y[2] - $y[0]) / ($x[2] - $x[0]) != $m[0]);
  $d = ($m[0]->value)[1];
  $x[3] = $x[2] + non_zero_random(-3,3)*$d;
  $y[3] = $y[2] + ($x[3] - $x[2])*$m[0];
} until (abs($x[3]) <= 9 && abs($y[3]) <= 9);
@p = map {Point($x[$_],$y[$_])} (0..3);
Context("ImplicitPlane")->variables->are(x =>'Real', y => 'Real');
$eq = Compute("y = $m[0](x - $x[2]) + $y[2]");
$gt = GraphTool("{line,solid,$p[2],$p[3]}")->with(
  staticObjects => ["{line,solid,$p[0],$p[1]}", "{point,$p[0]}", "{point,$p[1]}"],
  availableTools => [ "LineTool" ],
  showCoordinateHints => 0,
  showInStatic => 0,
