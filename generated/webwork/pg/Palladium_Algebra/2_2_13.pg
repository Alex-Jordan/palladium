Context("Point")->noreduce('(-x)-y', '(-x)+y');
$a = list_random(-1,1);
$h = list_random(-1,1);
$kmin = max(-10, -10 - $a*(2 - $h)**2, -10 - $a*(-2 - $h)**2);
$kmax = min(10, 10 - $a*(2 - $h)**2, 10 - $a*(-2 - $h)**2);
$k = random($kmin,$kmax);
$b = -2*$h*$a;
$c = ($a*($h)**2 + $k);
$f = Formula("$a x^2 + $b x + $c")->reduce;
if ($a > 0) {
  $l = (-$b + sqrt(($b)**2 - 4*$a*($c-10)))/(2*$a);
  $r = (-$b - sqrt(($b)**2 - 4*$a*($c-10)))/(2*$a);
} else {
  $l = (-$b - sqrt(($b)**2 - 4*$a*($c+10)))/(2*$a);
  $r = (-$b + sqrt(($b)**2 - 4*$a*($c+10)))/(2*$a);
}
@x = -2..2;
@y = map {$f->eval(x => $_)} (@x);
@p = map {Point($x[$_],$y[$_])} (0..4);
$mp = MultiAnswer(map {($y[$_], $p[$_])} (0..4) )->with(
  singleResult => 1,
  allowBlankAnswers => 1,
  checker => sub {
    my ($c,$s,$self) = @_;
    my $return = 1;
    my %numWord = (
      0 => 'first', 1 => 'second',  2 => 'third',  3 => 'fourth', 4 => 'fifth',
      5 =>'sixth',  6 => 'seventh', 7 => 'eighth', 8 => 'ninth',  9 => 'tenth'
    );
    my $error = '';
    for (0..9) {
      $error .= "Your $numWord{$_} answer is incorrect.~~n" unless ($c->[$_] == $s->[$_]);
    }
    Value::Error($error) if $error;
    return 1;
  }
);
$gt = GraphTool( (map {"{point,$p[$_]}"} (0..4)), "{quadratic,solid,$p[0],$p[1],$p[2]}")->with(
  availableTools => [ "PointTool", "LineTool", "QuadraticTool" ],
  showCoordinateHints => 0,
  showInStatic => 0,
  cmpOptions => {
    list_checker => sub {
      my ($c, $s, $a, $v) = @_;
      return 0 if $a->{isPreview};
      my $score = 0;
      my @errors;
      my $ptcount = 0;
      my $quadraticCmp = ($graphToolObjectCmps->{quadratic}->($c->[5]))[1];
      for my $i (0 .. $#$s) {
        if ($quadraticCmp->($s->[$i])) { ++$score; next; }
        my $nth = Value::List->NameForNumber($i + 1);
        if ($s->[$i]->extract(1) eq 'line' || $s->[$i]->extract(1) eq 'quadratic') {
          push(@errors, "The $nth object graphed is not the correct graph.");
          next;
        }
        if ($s->[$i]->extract(1) eq 'point') {
          my ($px,$py) = $s->[$i]->extract(2)->value;
          if ($py == $f->eval(x => $px)) {
            my $seen = 0;
            for my $j (0..($i-1)) {
              if ($s->[$i]->extract(2) == $s->[$j]->extract(2)) {
                $seen = 1;
                last;
              }
            }
            unless ($seen) {++$ptcount; ++$score;}
            next;
          }
          push(@errors, "The $nth object graphed is a point not on the graph.");
          next;
        }
        push(@errors, "The $nth object graphed is incorrect.");
      }
      return ($score, @errors);
    }
  }
);

$image_1 = createLaTeXImage();
$image_1->addToPreamble(latexImagePreamble());
$image_1->BEGIN_LATEX_IMAGE
