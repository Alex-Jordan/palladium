Context()->variables->add(y => 'Real');
Context()->noreduce('(-x)-y', '(-x)+y');
$left = Formula("$A x + $B y")->reduce;
$right = Formula("$C");
Context("Point");
$xi = Compute("($x,0)");
$yi = Compute("(0,$y)");

