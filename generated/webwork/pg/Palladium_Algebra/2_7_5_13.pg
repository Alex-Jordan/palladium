($A, $B, $C) = random_subset(3, 20 .. 99);
($A, $B) = (random(0,1))
  ? (-$A, $B)
  : ($A, -$B);
Context("Fraction");
$x = Fraction($C/$A);
$y = Fraction($C/$B);
